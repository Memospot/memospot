{
  "[css]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[json]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[markdown]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[toml]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[yaml]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dprint.dprint"
  },
  "code-runner.cwd": "${workspaceFolder}",
  "code-runner.executorMapByGlob": {
    "**/*.test.ts": "cd $dir ; deno test -A $fileName",
    "**/*.ts": "cd $dir ; deno run -A $fileName",
    "**/*.{toml,json,jsonc,yml,yaml}|.dprint.jsonc": "cd $dir ; dprint check $fileName && echo \"$fileName is properly formatted.\""
  },
  "code-runner.ignoreSelection": true,
  "deno.enable": true,
  "deno.cache": "./.deno",
  "deno.lint": true,
  "editor.formatOnSave": true,
  "evenBetterToml.completion.maxKeys": 8,
  "evenBetterToml.formatter.allowedBlankLines": 2,
  "evenBetterToml.formatter.columnWidth": 96,
  "evenBetterToml.formatter.crlf": false,
  "evenBetterToml.formatter.indentString": "    ",
  "evenBetterToml.schema.enabled": true,
  "evenBetterToml.rules": [
    {
      "include": ["**/Cargo.toml"],
      "keys": ["dependencies", "*-dependencies"],
      "formatting": {
        "reorder_keys": true
      }
    }
  ],
  "files.associations": {
    "CODEOWNERS": "gitignore"
  },
  "rust-analyzer.cargo.extraEnv": {
    "RUSTFLAGS": "-Ctarget-cpu=native -Copt-level=0",
    "RUSTC_WRAPPER": "sccache",
    "SCCACHE_DIR": "${workspaceFolder}${pathSeparator}.sccache",
    "CARGO_INCREMENTAL": "0"
  },
  "rust-analyzer.linkedProjects": ["src-tauri/Cargo.toml"]
}
